<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.edus.apollo">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:name="com.edus.apollo.MyApplication"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity
                android:name=".KeyboardAdjustPanActivity"
                android:windowSoftInputMode="adjustPan"></activity>
        <activity
                android:name=".KeyboardResizeActivity"
                android:windowSoftInputMode="adjustResize"></activity>
        <activity
                android:name=".VerticalActivity"
                android:windowSoftInputMode="adjustResize"></activity>

        <activity android:name=".ViewDrawActivity"/>
        <activity android:name=".HomeActivity"/>
        <activity android:name=".RouterInternalActivity"/>

        <activity android:name=".RouterActivity"
                  android:exported="true"
                  android:launchMode="singleTop"
                  android:taskAffinity="${applicationId}.outter"
                  android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                        android:host="com.edus.apollo"
                        android:path="/native/viewdrawactivity"
                        android:scheme="http" />

                <data
                        android:host="com.edus.apollo"
                        android:path="/native/keyboardadjustpanactivity"
                        android:scheme="http" />
            </intent-filter>

        </activity>

    </application>

</manifest>